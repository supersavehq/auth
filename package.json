{
  "name": "@supersave/auth",
  "version": "0.3.0",
  "description": "A library that enables developers to easily build authenticated endpoints for a supersave powered API/backend.",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint --ext=.ts ./src",
    "lint:fix": "eslint --ext=.ts --fix ./src",
    "format": "prettier --check ./src ./tests",
    "format:fix": "prettier --write ./src ./tests",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:mysql": "CONN=mysql://supersave:savesuper@mysql/supersave jest --runInBand --forceExit",
    "test:watch:mysql": "CONN=mysql://supersave:savesuper@mysql/supersave jest --runInBand --forceExit --watch"
  },
  "engines": {
    "node": "^16.13 || ^18.10"
  },
  "types": "./build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/supersavehq/auth.git"
  },
  "keywords": [
    "supersave",
    "oauth",
    "api",
    "authentication"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:unicorn/recommended"
    ],
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "unicorn/filename-case": "error",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-null": "off",
      "@typescript-eslint/ban-ts-comment": [
        "error",
        {
          "ts-expect-error": "allow-with-description",
          "ts-ignore": "allow-with-description",
          "ts-nocheck": "allow-with-description",
          "ts-check": "allow-with-description"
        }
      ]
    }
  },
  "author": "daangemist",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/supersavehq/auth/issues"
  },
  "homepage": "https://github.com/supersavehq/auth#readme",
  "devDependencies": {
    "@tsconfig/node16-strictest": "^1.0.4",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/mysql": "^2.15.19",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "jest": "^27.3.1",
    "mysql": "^2.18.1",
    "prettier": "^2.7.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "debug": "^4.3.2",
    "express": "^4.17.1",
    "install": "^0.13.0",
    "njwt": "^1.1.0",
    "nodejs-pbkdf2": "^1.0.1",
    "npm": "^8.1.3"
  },
  "peerDependencies": {
    "supersave": "^0.12.1"
  }
}
